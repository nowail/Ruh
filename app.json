{
  "name": "Virtual Wellness Platform",
  "description": "A comprehensive internal tool for wellness clinic administrators to manage clients and appointments through external API integration.",
  "repository": "https://github.com/nowail/Ruh",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["ruby", "rails", "react", "wellness", "appointments", "api"],
  "env": {
    "RAILS_ENV": {
      "description": "Rails environment",
      "value": "production"
    },
    "RAILS_MASTER_KEY": {
      "description": "Rails master key for credentials",
      "generator": "secret"
    },
    "EXTERNAL_API_URL": {
      "description": "External API URL for wellness system integration",
      "value": "https://mock.api"
    },
    "EXTERNAL_API_TIMEOUT": {
      "description": "External API timeout in seconds",
      "value": "30"
    },
    "EXTERNAL_API_RETRIES": {
      "description": "External API retry attempts",
      "value": "3"
    },
    "SIDEKIQ_CONCURRENCY": {
      "description": "Number of Sidekiq worker threads",
      "value": "5"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    },
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate && bundle exec rails db:seed"
  }
} 